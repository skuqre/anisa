<div class="navbar">
    <h1 class="logo"><a href="/anisa/">Anisa</a></h1>
    <a href="https://github.com/skuqre/anisa"><i class="bx bxl-github"></i> Github</a>

    <h1 class="sidebar-button" aria-label="Hide Sidebar"><i class='bx bx-menu'></i></h1>
</div>

<style>
    .navbar {
        width: 100%;
        height: fit-content;
        background-color: rgba(21, 21, 21, 1);
        margin: 0;
        display: flex;
        align-items: center;

        border-radius: 0 0 16px 0;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.8);
    }

    .navbar > a {
        display: flexbox;

        text-align: center;
        text-decoration: none;
        padding: 16px 0;
        font-weight: bold;
        font-size: 1.2rem;
        color: gray;
        position: static;

        width: 100%;
        max-width: 150px;

        transition-property: color, background-color, box-shadow;
        transition-duration: 0.1s;
        transition-timing-function: ease-in-out;
    }

    .navbar > a:hover,
    .navbar > a:focus {
        background-color: #f4d2591f;
        color: white;
        box-shadow: 0 -4px 0 #ffdb5a inset;
        text-decoration: none;

        transition-property: color, background-color, box-shadow;
        transition-duration: 0.1s;
        transition-timing-function: ease-in-out;
    }

    .navbar h1.logo {
        color: white;
        text-align: center;
        display: flex;
        align-items: center;
        gap: 8px;
        margin-left: 32px;
        margin-right: 32px;

        max-width: 300px;

        padding: 0;
        border: none;
    }

    .navbar h1.logo a {
        color: white;
    }

    .navbar h1.logo a:hover {
        text-decoration: none;
    }

    .navbar h1 {
        margin-top: 0;
        margin-bottom: 0;
    }

    .navbar h1.sidebar-button {
        margin: 12px 16px;
        margin-left: auto;
        margin-right: 24px;
        float: right;
        padding: 0;
        border: none;
    }
</style>

<script>
    const button = document.querySelectorAll('h1.sidebar-button')[0];
    const sidebar = document.querySelectorAll('div.sidebar')[0] as HTMLElement;
    const main = document.querySelectorAll('div.main')[0] as HTMLElement;

    // yes, I know, broken as shit.
    // will fix soon:tm:
    button.addEventListener('pointerdown', (e) => {
        var cur = sidebar.computedStyleMap().get('left') as any;

        if (cur.value >= 0) {
            sidebar.style.left = '-300px';

            if (window.innerWidth > 840) {
                main.style.width = '100%';
                main.style.marginLeft = '0';
            }
        } else {
            sidebar.style.left = '0px';

            if (window.innerWidth > 840) {
                main.style.width = 'calc(100% - 300px)';
                main.style.marginLeft = '300px';
            } else {
                main.style.width = '100%';
                main.style.marginLeft = '0';
            }
        }
    });

</script>