<style>
    div.footer {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        gap: 8px;
        align-items: center;
        flex-wrap: wrap;

        background-color: rgba(21,21,21,1);
        color: var(--light);

        width: 100%;
        height: min-content;
        padding: 16px 0;

        margin-top: 256px;

        
        box-shadow: 0 -4px 16px rgba(0,0,0,0.8);
        text-align: center;
    }
</style>

<script>
    fetch("https://api.github.com/repos/skuqre/anisa/commits/main")
        .then((e) => {
            e.json().then((j) => {
                let ele = document.getElementById("commit") as any;

                ele.innerHTML = j.sha.substring(0, 6);
                ele.href = j.html_url;
            });
        });
</script>