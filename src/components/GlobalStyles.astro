<style is:global>
    @import url("https://cdn.jsdelivr.net/gh/orioncactus/pretendard@v1.3.9/dist/web/static/pretendard.min.css");

    :root {
        --accent: #f4d259;

        --light: #bbbbbb;
        --lighter: #cccccc;
        --lighterer: #dddddd;
        --lightererest: #eeeeee;

        --dark: #404040;
        --darker: #303030;
        --darkerer: #202020;
        --darkererer: #101010;
    }

    html {
        font-family: "Pretendard", sans-serif;

        background: var(--darkererer);
        background-image: radial-gradient(var(--darkerer) 2px, transparent 0);
        background-size: 32px 32px;
        background-position: center;

        color: var(--lightererest);
    }

    body {
        width: 100%;
        scrollbar-gutter: stable both-edges;
        margin: 0;
    }

    a {
        color: var(--accent);
        text-decoration: none;
    }

    a:hover {
        text-decoration: underline;
    }

    h1,
    h2,
    h3 {
        border-bottom: 1px var(--dark) solid;
        padding-bottom: 8px;
    }

    hr {
        border: none;
        margin: 16px 0;
        border-bottom: 1px var(--dark) solid;
    }

    ::-webkit-scrollbar-track {
        background-color: rgba(0, 0, 0, 0);
    }

    ::-webkit-scrollbar {
        width: 16px;
        background-color: rgba(0, 0, 0, 0);
    }

    ::-webkit-scrollbar-thumb {
        border: 4px solid transparent;
        border-radius: 16px;
        background-color: var(--darker);
        background-clip: content-box;
    }

    /* MAIN */

    div.main {
        display: flex;
        justify-content: center;
        width: calc(100% - 300px);
        margin: 0;

        margin-left: 300px;
        margin-top: 100px;

        transition: margin-left 0.2s ease-in-out;
    }

    div.wrapper {
        width: 80%;
    }

    div.img-wrapper {
        display: flex;
        align-items: center;
        justify-content: center;

        max-width: 600px;
        max-height: 600px;
    }

    img#nikke-fb {
        max-height: 600px;
        aspect-ratio: auto;
    }

    div.top-main {
        display: flex;
        flex-direction: row;
        justify-content: space-evenly;
    }

    div.rates-scroll {
        max-height: 600px;
        height: min-content;
        overflow-y: auto;
        scrollbar-gutter: stable;
    }

    /* RATE TABLE SHARED STYLES */

    div.rate-table-bg {
        width: min-content;
        height: min-content;
    }

    table.rate-table {
        border-spacing: 8px;
        max-width: 100%;
    }

    table.rate-table th {
        min-width: 100px;
        height: 24px;
        color: var(--lightererest);
        text-align: left;
        font-weight: normal;
    }

    table.rate-table td {
        background-color: var(--darker);
        padding: 8px;
        height: 24px;
        color: white;
        text-align: center;
        border-radius: 4px;
        font-weight: bold;
        text-shadow: black 0 0 4px;
    }

    div.rates {
        margin: 16px auto;
        border: var(--dark) 1px solid;

        border-radius: 4px;
        background-image: radial-gradient(
            at top right,
            var(--darkerer),
            var(--darkererer)
        );
        padding: 8px;
        width: min-content;
        color: var(--lightererest);

        transition: background-image 0.2s ease-in-out;
    }

    div.rates:hover {
        background-image: radial-gradient(at top right, #252525, #151515);
        transition: background-image 0.2s ease-in-out;
    }

    div.rates h3 {
        margin: 8px;
        margin-bottom: 4px;
    }

    div.rates p {
        margin: 0;
        margin-top: 16px;
    }

    /* CHARACTER LIST */

    div.nikke-table {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;

        margin: auto;

        gap: 16px;
    }

    div.nikke-portrait {
        width: 128px;
        height: 128px;

        scale: 1;
        transition: scale 0.2s ease-in-out;
    }

    img.nikke {
        width: 128px;
        height: 128px;

        background-image: radial-gradient(
            at top right,
            var(--darkerer),
            var(--darkererer)
        );
        border: var(--dark) 1px solid;

        border-radius: 4px;
        box-shadow: 0px 0px 4px black;
    }

    div.nikke-portrait:hover {
        scale: 1.1;
        transition: scale 0.2s ease-in-out;
    }

    .portrait-overlay {
        width: 100%;
        height: 100%;
        display: inline-block;
        position: absolute;
        z-index: 420;
        border-radius: 4px;
    }

    div.portrait-gradient {
        background: linear-gradient(
            to top,
            rgba(0, 0, 0, 0.7),
            rgba(0, 0, 0, 0.15),
            rgba(0, 0, 0, 0.1),
            rgba(0, 0, 0, 0)
        );
        top: 1px;
        left: 1px;
        border-radius: 3px;
    }

    img.rarity-bar {
        display: inline-block;
        position: absolute;
        left: 1px;
        top: 113px;

        height: 16px;
        z-index: 421;
        border-bottom-left-radius: 3px;
        border-bottom-right-radius: 3px;
        opacity: 1;
    }

    span.nikke-name {
        position: relative;
        bottom: 24px;
        display: inline-block;
        padding: 0;
        margin: 0 8px;
        width: calc(100% - 16px);
        text-wrap: nowrap;
        text-align: right;
        font-weight: bold;
        text-shadow: black 0 0 4px, black 0 0 4px, black 0 0 4px;
        z-index: 422;
        left: 1px;
    }

    div.marquee-name {
        position: relative;
        width: calc(100% - 16px);
        margin: 0 8px;
        bottom: 24px;
        display: inline-block;
        text-wrap: nowrap;
        white-space: nowrap;
        overflow: hidden;
        z-index: 422;
    }

    div.marquee-name span {
        display: inline-block;
        animation: marquee 5s linear infinite;
        text-shadow: black 0 0 4px, black 0 0 4px, black 0 0 4px;
        font-weight: bold;
    }

    @keyframes marquee {
        0% {
            transform: translateX(100%);
        }
        100% {
            transform: translateX(-100%);
        }
    }

    div.hex-tray {
        display: flex;
        flex-direction: column;
        gap: 2px;

        position: absolute;
        top: 0;
        left: 0;
        z-index: 423;

        justify-content: center;
        height: 100%;
    }

    div.hex-tray img {
        width: 75%;
        height: 75%;
    }

    div.hex-gray {
        display: flex;
        align-items: center;
        justify-content: center;

        background-image: url("/anisa/images/hex_frame.png");
        background-position: center;
        background-size: 120%;
        width: 30px;
        height: 30px;
    }

    .optionico {
        font-size: 24px;
    }

    /* ASPECT RATIO STUFF */

    @media only screen and (max-width: 1215px) {
        img#nikke-fb {
            width: 100%;
            height: auto;
        }
    }

    @media only screen and (max-width: 600px) {
        img#nikke-fb {
            width: auto;
            height: 100%;
        }

        div.wrapper {
            width: 90%;
        }

        div.top-main {
            flex-direction: column;
        }
    }

    @media only screen and (max-width: 840px) {
        div.sidebar {
            left: -300px !important;
        }
        div.main {
            width: 100%;
            margin-left: 0px;
        }

        div.wrapper {
            width: 90%;
        }

        div.top-main {
            flex-direction: column;
        }
    }
</style>
