<style is:global>
    @import url("https://cdn.jsdelivr.net/gh/orioncactus/pretendard@v1.3.9/dist/web/static/pretendard.min.css");
    @font-face {
        font-family: 'Abolition';
        src: url(/anisa/fonts/Abolition.ttf);
    }

    :root {
        --accent: #f4d259;

        --light: #bbbbbb;
        --lighter: #cccccc;
        --lighterer: #dddddd;
        --lightererest: #eeeeee;

        --dark: #404040;
        --darker: #303030;
        --darkerer: #202020;
        --darkererer: #101010;
    }

    html {
        font-family: "Pretendard", sans-serif;

        background: var(--darkererer);
        background-image: radial-gradient(var(--darkerer) 2px, transparent 0);
        background-size: 32px 32px;
        background-position: center;

        color: var(--lightererest);

        line-height: 24px;
    }

    body {
        width: 100%;
        scrollbar-gutter: stable both-edges;
        margin: 0;
    }

    a {
        color: var(--accent);
        text-decoration: none;
    }

    a:hover {
        text-decoration: underline;
    }

    h1,
    h2,
    h3,
    h4 {
        border-bottom: 1px var(--dark) solid;
        padding-bottom: 8px;
    }

    hr {
        border: none;
        margin: 16px 0;
        border-bottom: 1px var(--dark) solid;
    }

    ::-webkit-scrollbar-track {
        background-color: rgba(0, 0, 0, 0);
    }

    ::-webkit-scrollbar {
        width: 16px;
        background-color: rgba(0, 0, 0, 0);
    }

    ::-webkit-scrollbar-thumb {
        border: 4px solid transparent;
        border-radius: 16px;
        background-color: var(--darker);
        background-clip: content-box;
    }

    /* MAIN */

    div.main {
        display: flex;
        justify-content: center;
        width: calc(100% - 300px);
        margin: 0;

        margin-left: 300px;
        margin-top: 100px;

        transition: margin-left, width, 0.2s ease-in-out;
    }

    div.wrapper {
        width: 80%;
    }

    div.img-wrapper {
        display: flex;
        margin: 0;
        width: 100%;
    }

    img#nikke-fb {
        margin: auto;
        width: auto;
        max-width: 600px;
        max-height: 600px;
    }

    div.top-main {
        display: flex;
        flex-direction: row;
        justify-content: center;
    }

    div.rate-wrapper {
        width: 100%;
    }

    div.scroll-limit {
        max-height: 600px;
        height: min-content;
        overflow-y: auto;
        scrollbar-gutter: stable;
    }

    /* RATE TABLE SHARED STYLES */

    div.rate-table-bg {
        width: min-content;
        height: min-content;
    }

    table.rate-table {
        border-spacing: 8px;
        max-width: 100%;
    }

    table.rate-table th {
        min-width: 100px;
        height: 24px;
        color: var(--lightererest);
        text-align: left;
        font-weight: normal;
    }

    table.rate-table td {
        background-color: var(--darker);
        padding: 8px;
        height: 24px;
        color: white;
        text-align: center;
        border-radius: 4px;
        font-weight: bold;
        text-shadow: black 0 0 4px, black 0 0 2px;
    }

    div.rates {
        margin: 16px auto;
        border: var(--dark) 1px solid;

        border-radius: 4px;
        background-image: radial-gradient(
            at top right,
            var(--darkerer),
            var(--darkererer)
        );
        padding: 8px;
        width: min-content;
        color: var(--lightererest);
    }

    div.rates:hover {
        background-image: radial-gradient(at top right, #252525, #151515);
    }

    div.rates h3 {
        margin: 8px;
        margin-bottom: 4px;
    }

    div.rates p {
        margin: 0;
        margin-top: 16px;
    }

    div.nikke-main {
        display: flex;
        width: 100%;

        flex-direction: row;
        gap: 16px;
        align-content: stretch;
    }

    div.fun-stuff, div.build-stuff {
        display: flex;

        flex-direction: column;
        gap: 16px;

        flex-basis: 50%;
        flex-grow: 2;
    }

    table.char-info {
        flex-basis: 50%;
        flex-grow: 2;
    }

    table.char-info td, table.char-info th {
        padding: 16px 0;
        padding-right: 16px;
        text-align: left;
    }

    div.info-table {
        display: flex;
        justify-content: space-around;
        flex-wrap: wrap;
        flex-direction: row;
    }

    p.rehab.disc {
        border-left: 4px #2ced73 solid;
        background-color: #032e10;
    }

    p.burst.disc {
        border-left: 4px #fe000a solid;
        background-color: #310000;
    }

    p.limited.disc {
        border-left: 4px #fe9000 solid;
        background-color: #311700;
    }

    p.disc {
        padding: 12px 16px;
        margin: 16px 0;
    }

    div.advise-question, div.skill-cell {
        width: 90%;
        height: min-content;

        margin: 16px auto;
        border: var(--dark) 1px solid;

        border-radius: 4px;
        background-image: radial-gradient(
            at top right,
            var(--darkerer),
            var(--darkererer)
        );
        padding: 8px;
        color: var(--lightererest);
    }

    div.advise-question:hover, div.skill-cell:hover {
        background-image: radial-gradient(at top right, #252525, #151515);
    }

    div.advise-question > h4.advise-main, div.skill-cell > h4.skill-main {
        margin: 8px;
        margin-bottom: 4px;
    }

    span.advise-right {
        border-left: 4px #2ced73 solid;
        background-color: #032e10;
        padding: 4px 8px;
        display: block;
        margin: 0 8px;
        margin-top: 16px;
    }

    span.advise-wrong {
        border-left: 4px #fe000a solid;
        background-color: #310000;
        padding: 4px 8px;
        padding-left: 8px;
        display: block;
        margin: 0 8px;
        margin-top: 16px;
        margin-bottom: 8px;
    }

    div.skill-cell p {
        margin: 8px;
    }

    span.no-header-weight {
        font-weight: normal;
    }

    /* CHARACTER LIST */

    div.nikke-table {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;

        margin: auto;

        gap: 16px;
    }

    div.nikke-portrait {
        width: 128px;
        height: 128px;

        scale: 1;
        transition: scale 0.2s ease-in-out;
    }

    img.nikke {
        width: 128px;
        height: 128px;

        background-image: radial-gradient(
            at top right,
            var(--darkerer),
            var(--darkererer)
        );
        border: var(--dark) 1px solid;

        border-radius: 4px;
        box-shadow: 0px 0px 4px black;
    }

    div.nikke-portrait:hover {
        scale: 1.1;
        transition: scale 0.2s ease-in-out;
    }

    .portrait-overlay {
        width: 100%;
        height: 100%;
        display: inline-block;
        position: absolute;
        z-index: 420;
        border-radius: 4px;
    }

    div.portrait-gradient {
        background: linear-gradient(
            to top,
            rgba(0, 0, 0, 0.7),
            rgba(0, 0, 0, 0.15),
            rgba(0, 0, 0, 0.1),
            rgba(0, 0, 0, 0)
        );
        top: 1px;
        left: 1px;
        border-radius: 3px;
    }

    img.rarity-bar {
        display: inline-block;
        position: absolute;
        left: 1px;
        top: 113px;

        height: 16px;
        z-index: 421;
        border-bottom-left-radius: 3px;
        border-bottom-right-radius: 3px;
        opacity: 1;
    }

    span.nikke-name {
        position: relative;
        bottom: 30px;
        display: inline-block;
        padding: 0;
        margin: 0 8px;
        width: calc(100% - 16px);
        text-wrap: nowrap;
        text-align: right;
        font-weight: bold;
        text-shadow: black 0 0 4px, black 0 0 4px, black 0 0 4px;
        z-index: 422;
        left: 1px;
    }

    div.marquee-name {
        position: relative;
        width: calc(100% - 16px);
        margin: 0 8px;
        bottom: 30px;
        display: inline-block;
        text-wrap: nowrap;
        white-space: nowrap;
        overflow: hidden;
        z-index: 422;
    }

    div.marquee-name span {
        display: inline-block;
        animation: marquee 5s linear infinite;
        text-shadow: black 0 0 4px, black 0 0 4px, black 0 0 4px;
        font-weight: bold;
    }

    @keyframes marquee {
        0% {
            transform: translateX(100%);
        }
        100% {
            transform: translateX(-100%);
        }
    }

    .hex-tray {
        display: flex;
        flex-direction: column;
        gap: 2px;

        position: absolute;
        top: 0;
        left: 0;
        z-index: 423;

        justify-content: center;
        height: 100%;
    }

    .hex-tray img {
        width: 75%;
        height: 75%;
    }

    .hex-gray {
        display: flex;
        align-items: center;
        justify-content: center;

        background-image: url("/anisa/images/hex_frame.png");
        background-position: center;
        background-size: 120%;
        width: 30px;
        height: 30px;
    }

    .inlined-hex {
        display: inline-flex;
        position: relative;
        width: 15px;
        height: 15px;

        margin: 0 8px;

        scale: 2;
    }

    .inlined-hex img {
        width: 75%;
    }

    .optionico {
        font-size: 24px;
    }

    div.imgicon {
        display: inline-block;
        height: 24px;
    }

    div.imgicon img {
        height: 100%;
        scale: 1.25;
    }

    div.tags-list {
        display: flex;
        position: absolute;
        top: 0;
        right: -2px;
        flex-direction: column;
    }

    div.tags-list > span.tag {
        text-align: center;
        font-family: 'Abolition', monospace;
        padding: 4px 8px;
        font-size: 18px;
        border-radius: 4px;
        line-height: 16px;
        text-shadow: black 0 0 4px, black 0 0 4px;
        border-bottom-right-radius: 0;
        border-top-right-radius: 0;
    }

    div.tags-list > span.tag:last-child {
        border-bottom-right-radius: 4px;
    }

    div.tags-list > span.tag:first-child {
        border-top-right-radius: 4px;
    }

    .new {
        background-image: radial-gradient(
            at top right,
            #00aaff,
            #0066ff
        );
    }

    .invest {
        background-image: radial-gradient(
            at top right,
            #ffaa00,
            #ff6600
        );
    }

    /* ASPECT RATIO STUFF */

    @media only screen and (max-width: 600px) {
        div.wrapper {
            width: 90%;
        }

        div.top-main {
            flex-direction: column;
        }
    }

    @media only screen and (max-width: 840px) {
        div.nikke-main {
            flex-direction: column;
        }

        img#nikke-fb {
            width: 100%;

            max-height: none;
        }

        div.main {
            width: 100%;
            margin-left: 0px;
        }

        div.wrapper {
            width: 90%;
        }

        div.top-main {
            flex-direction: column;
        }

        img.marian {
            left: 50%;
            transform: translateX(-50%);
        }
    }

    img.marian {
        position: fixed;
        bottom: -750px;
        right: -20%;
        opacity: 0.2;
        z-index: -1;
    }
</style>
