<style is:global>
    @import url("https://cdn.jsdelivr.net/gh/orioncactus/pretendard@v1.3.9/dist/web/static/pretendard.min.css");

    :root {
        --accent: #f4d259;

        --light: #bbbbbb;
        --lighter: #cccccc;
        --lighterer: #dddddd;
        --lightererest: #eeeeee;

        --dark: #404040;
        --darker: #303030;
        --darkerer: #202020;
        --darkererer: #101010;
    }

    html {
        font-family: 'Pretendard', sans-serif;

        background: var(--darkererer);
        background-image: radial-gradient(var(--darkerer) 2px,transparent 0);
        background-size: 32px 32px;
        background-position: center;

        color: var(--lightererest);
    }

    body {
        width: 100%;
        scrollbar-gutter: stable both-edges;
        margin: 0;
    }

    a {
        color: var(--accent);
        text-decoration: none;
    }

    a:hover {
        text-decoration: underline;
    }

    ::-webkit-scrollbar-track
    {
        background-color: rgba(0,0,0,0);
    }

    ::-webkit-scrollbar
    {
        width: 16px;
        background-color: rgba(0,0,0,0);
    }

    ::-webkit-scrollbar-thumb
    {
        border: 4px solid transparent;
        border-radius: 16px;
        background-color: var(--darker);
        background-clip: content-box;
    }

    /* MAIN */

    div.main {
        display: flex;
        justify-content: center;
        width: 100%;
        margin: 0;
    }

    div.wrapper {
        width: 70%;
    }

    div.img-wrapper {
        display: flex;
        align-items: center;
        justify-content: center;

        max-width: 600px;
        max-height: 600px;
    }

    img#nikke-fb {
        max-height: 600px;
        aspect-ratio: auto;
    }

    div.top-main {
        display: flex;
        flex-direction: row;
        justify-content: space-evenly;
    }

    div.rates-scroll {
        max-height: 600px;
        height: min-content;
        overflow-y: auto;
        scrollbar-gutter: stable;
    }

    /* RATE TABLE SHARED STYLES */

    div.rate-table-bg {
        width: min-content;
        height: min-content;
    }

    table.rate-table {
        border-spacing: 8px;
        max-width: 100%;
    }

    table.rate-table th {
        min-width: 100px;
        height: 24px;
        color: var(--lightererest);
        text-align: left;
        font-weight: normal;
    }

    table.rate-table td {
        background-color: var(--darker);
        padding: 8px;
        height: 24px;
        color: white;
        text-align: center;
        border-radius: 4px;
        font-weight: bold;
        text-shadow: black 0 0 4px;
    }
    
    div.rates {
        margin: 16px auto;
        border: var(--dark) 1px solid;

        border-radius: 4px;
        background-image: radial-gradient(at top right, var(--darkerer), var(--darkererer));
        padding: 8px;
        width: min-content;
        color: var(--lightererest);

        transition: background-image 0.2s ease-in-out;
    }

    div.rates:hover {
        background-image: radial-gradient(at top right, #252525, #151515);
        transition: background-image 0.2s ease-in-out;
    }

    div.rates h3 {
        margin: 8px;
        margin-bottom: 4px;
    }

    div.rates p {
        margin: 0;
        margin-top: 16px;
    }

    /* CHARACTER LIST */

    div.nikke-table {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;

        margin: auto;

        gap: 16px
    }

    div.nikke-portrait {
        width: 128px;
        height: 128px;

        scale: 1;
        transition: scale 0.2s ease-in-out;
    }

    img.nikke {
        width: 128px;
        height: 128px;

        border-radius: 4px;
        background-color: var(--darker);
        box-shadow: 0px 0px 4px black;
    }

    div.nikke-portrait:hover {
        scale: 1.1;
        transition: scale 0.2s ease-in-out;
    }

    div.nikke-portrait-gradient {
        width: 100%;
        height: 100%;
        display: inline-block;
        background: linear-gradient(to top, rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.15),rgba(0, 0, 0, 0.1), rgba(0, 0, 0, 0));
        position: absolute;
        z-index: 420;
        top: 0;
        border-radius: 4px;
    }

    span.nikke-name {
        position: relative;
        bottom: 32px;
        display: inline-block;
        padding: 0;
        margin: 0 8px;
        width: calc(100% - 16px);
        overflow-x: auto;
        text-wrap: nowrap;
        text-align: right;
        font-weight: bold;
        z-index: 421;
    }

    /* ASPECT RATIO STUFF */

    @media only screen and (max-width: 1215px) {
        img#nikke-fb {
            width: 100%;
            height: auto;
        }
    }

    @media only screen and (max-width: 600px) {
        img#nikke-fb {
            width: auto;
            height: 100%;
        }

        div.wrapper {
            width: 90%;
        }
        
        div.top-main {
            flex-direction: column;
        }
    }
</style>