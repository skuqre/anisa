<div class="gacha-search" id="gacha-search">
    <div class="gacha-search-wrapper">
        <input type="text" placeholder="🔍 Search for NIKKE." id="gacha-searchbar" />
    </div>
</div>

<style>
    div.gacha-search {
        display: flex;
        margin: auto;
        width: 100%;
        align-items: center;
        justify-content: center;
        margin: 16px 0;
    }

    div.gacha-search-wrapper {
        display: flex;
        width: max-content;
        width: 100%;
        align-content: center;
        justify-content: center;
        padding: 8px;
        background-image: radial-gradient( at top right, var(--darkerer), var(--darkererer) );
        border: var(--dark) 1px solid;
        border-radius: 4px;
        font-size: 16px;
        flex-wrap: wrap;
        gap: 8px;
    }

    div.gacha-search input {
        padding: 12px 16px;
        outline: none;
        background-color: var(--darker);
        border: none;
        color: var(--lightererest);
        font-family: 'Pretendard', sans-serif;
        border-radius: 4px;
        font-size: 16px;
        width: 100%;
    }
</style>