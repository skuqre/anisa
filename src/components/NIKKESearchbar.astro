<style>
    div.nikke-search {
        display: flex;
        margin: auto;
        width: 100%;
        align-items: center;
        justify-content: center;
        margin: 16px 0;
    }

    div.nikke-search-wrapper {
        display: flex;
        width: max-content;
        max-width: 80%;
        align-content: center;
        justify-content: center;
        padding: 8px;
        background-image: radial-gradient( at top right, var(--darkerer), var(--darkererer) );
        border: var(--dark) 1px solid;
        border-radius: 4px;
        font-size: 16px;
        flex-wrap: wrap;
        gap: 8px;
    }

    div.break {
        flex-basis: 100%;
        height: 0;
    }

    div.nikke-search input {
        padding: 12px 16px;
        outline: none;
        background-color: var(--darker);
        border: none;
        color: var(--lightererest);
        font-family: 'Pretendard', sans-serif;
        border-radius: 4px;
        font-size: 16px;
        width: 100%;
        max-width: 500px;
    }

    div.picker {
        display: flex;
        border-radius: 4px;
        background-color: var(--darker);
        flex-direction: row;
    }

    div.picker span {
        display: inline-flex;
        justify-content: center;
        gap: 8px;
        padding: 12px 16px;
        border-right: 2px solid var(--darkerer);
        line-height: 24px;
        user-select: none;

        transition: background-color 0.2s ease-in-out;
    }

    div.picker span:hover {
        background-color: var(--dark);
        transition: background-color 0.2s ease-in-out;
        cursor: pointer;
    }

    div.picker span:last-child {
        border-right: none;
        border-bottom-right-radius: 4px;
        border-top-right-radius: 4px;
    }

    div.picker span:first-child {
        border-bottom-left-radius: 4px;
        border-top-left-radius: 4px;
    }

    i.con {
        font-style: normal;
        display: none;
    }

    span.option {
        display: inline-flex;
        justify-content: center;
        gap: 8px;
        padding: 12px 16px;
        line-height: 24px;
        user-select: none;
        border-radius: 4px;
        background-color: var(--darker);

        transition: background-color 0.2s ease-in-out;
    }

    span.option:hover {
        background-color: var(--dark);
        transition: background-color 0.2s ease-in-out;
    }
</style>

<script>
    var contextMode = false;
    const context: any = document.querySelectorAll("span#context")[0];
    const contexts = document.querySelectorAll("i.con");
    context.addEventListener('pointerdown', (e: any) => {
        contextMode = !contextMode;

        context.innerHTML = (contextMode ? "<i class='bx bx-checkbox-checked optionico'></i>" : "<i class='bx bx-checkbox optionico'></i>") + " Context";

        if (contextMode) {
            contexts.forEach((e: any) => {
                e.style.display = 'inline-block';
            });
        } else {
            contexts.forEach((e: any) => {
                e.style.display = 'none';
            });
        }
    });
</script>